<div class="log p-5 d-flex align-items-center justify-content-center">

  <div class="container bg-primary p-5 rounded-lg shadow-lg">

    <h2 class="text-white text-center mt-3">Link new LoL account</h2>

    <div class="container mt-3 pt-3">
      <%= form_tag user_riot_accounts_path do |f| %>
        <div class="col-6 offset-3">
          <div class="form-group row text-white">
            <label for="username">Username</label><br/>
            <input type="text" name="username" id="username" class="form-control rounded-sm">
          </div>

          <div class="form-group row text-white">
            <label for="password">Password</label><br />
            <input type="text" name="password" id="password" class="form-control rounded-sm">
          </div>

          <div class="form-group row text-white">
            <label for="server">Server</label><br/>
            <%= select_tag "server",  options_for_select(Boost::SERVER), class: "form-control rounded-sm" %>
          </div>

          <div class="actions">
            <input type="submit" class="btn btn-info rounded-sm btn-block" value="Add account">
          </div>
        </div>
      <% end %>
    </div>
  </div>
