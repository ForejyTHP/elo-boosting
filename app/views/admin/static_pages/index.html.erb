<div class="log p-5 d-flex align-items-center justify-content-center">
  <div class="mt-5 container bg-primary p-5 rounded-lg shadow-lg text-white">
    <h2 class="text-center mt-3 text-white">Admin Dashboard</h2>
    <ul class="mt-5 nav nav-tabs nav-fill mb-1">
      <li class="nav-item mr-3"><a class="nav-link active bg-light" data-toggle="tab" href="#users">Users</a></li>
      <li class="nav-item mr-3"><a class="nav-link bg-light" data-toggle="tab" href="#riot_accounts">Riot Accounts</a></li>
      <li class="nav-item m-0"><a class="nav-link bg-light" data-toggle="tab" href="#boosts">Boosts</a></li>
    </ul>
    <div class="tab-content border_violet">
      <div id="users" class="tab-pane fade show active ">
        <table class="table table-dark table-hover">
          <thead class="bg-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">Username</th></th>
              <th scope="col">Email</th>
              <th scope="col">Created at</th>
              <th scope="col">Account confirmed ?</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <% %>
          <tbody>
            <% @users.all.each do |user| %>
              <tr>
                <th scope="row"><%= user.id %></th>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.created_at.strftime("%d/%m/%Y") %></td>
                <td class=<%= background_color(user.confirmed?) %>>
                <td><%= link_to 'Show the account', admin_user_path(user), class: "text-white" %></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <div id="riot_accounts" class="tab-pane fade">
        <table class="table table-dark table-hover">
          <thead class="bg-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">User's email</th>
              <th scope="col">Username</th>
              <th scope="col">Password</th>
              <th scope="col">Server</th>
              <th scope="col">Added at</th>
            </tr>
          </thead>
          <% %>
          <tbody>
            <% @riot_accounts.all.each do |riot_account| %>
              <tr>
                <th scope="row"><%= riot_account.id %></th>
                <td><%= riot_account.user.email %></td>
                <td><%= riot_account.username %></td>
                <td><%= riot_account.password %></td>
                <td><%= riot_account.server %></td>
                <td><%= riot_account.created_at.strftime("%d/%m/%Y") %></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      <div id="boosts" class="tab-pane fade">
        <table class="table table-dark table-hover">
          <thead class="bg-dark">
            <tr>
              <th scope="col">#</th>
              <th scope="col">User's email</th>
              <th scope="col">Riot Account Username</th>
              <th scope="col">Queue</th>
              <th scope="col">Current Rank</th>
              <th scope="col">Desired Rank</th>
              <th scope="col">Created at</th>
              <th scope="col"></th>
            </tr>
          </thead>
          <% %>
          <tbody>
            <% @boosts.all.each do |boost| %>
              <tr>
                <th scope="row"><%= boost.id %></th>
                <td><%= boost.riot_account.user.email %></td>
                <td><%= boost.riot_account.username %></td>
                <td><%= boost.queue %></td>
                <td><%= boost.current_rank %></td>
                <td><%= boost.desired_rank %></td>
                <td><%= boost.created_at.strftime("%d/%m/%Y") %></td>
              </tr>
            <%end%>
          </tbody>
        </table>
      </div>
      </div>
    </div>
  </div>
</div>